{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "babel-eslint",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": 1,
    "import/prefer-default-export": 0,
    "no-param-reassign": 0,
    "no-console": 0,
    "no-unused-vars": 1,
    "no-empty-function": 1,
    "default-case": 1,
    "prefer-template": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "no-plusplus": "off",
    "prefer-destructuring": ["error", {
      "AssignmentExpression": {
        "array": false,
        "object": false
      }
    }],
    "prefer-rest-params": 0,
    "camelcase": 0,
    "no-use-before-define": 0,
    "operator-assignment": 0,
    "no-restricted-properties": 0,
    "no-new": 0,
    "no-restricted-syntax": 0,
    "no-prototype-builtins": 0,
    "no-cond-assign": 0,
    "no-lonely-if": 0,
    "no-extend-native": 0    
  }
}
